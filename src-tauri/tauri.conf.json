{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DICOM App",
  "version": "2.0.0",
  "identifier": "com.puemmth.dicom-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DICOM App",
        "width": 800,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "desktopTemplate": null
      }
    }
  }
}